<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties" decoration-success="state == 'offer_received'" decoration-info="state == 'offer_accepted'" decoration-muted="state == 'sold'">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" string="Available From" optional="hide"/>
                <field name="state"/>
            </list>
        </field>
    </record>

<!-- Form View -->
<record id="estate_property_view_form" model="ir.ui.view">
    <field name="name">estate.property.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <form string="Property" class="o_estate_form">
            <header>
                <button name="action_sold" 
                        type="object" 
                        string="Sold" 
                        confirm="Are you sure you'd like to mark this property as sold?"
                        class="oe_highlight"
                        invisible="state in ['sold', 'canceled']"/>
                <button name="action_cancel" 
                        type="object" 
                        string="Cancel"
                        confirm="Are you sure you'd like to mark this property as canceled?"
                        invisible="state in ['sold', 'canceled']"/>
                <field name="state" widget="statusbar"/>
            </header>
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="Property Name"/>
                    </h1>
                    <field name="tag_ids" string="Property Tags" widget="many2many_tags"/>
                </div>
                <group>
                    <group>
                        <field name="postcode"/>
                        <field name="property_type_id"/>
                        <field name="date_availability"/>
                    </group>
                    <group>
                        <field name="expected_price"/>
                        <field name="best_offer"/>
                        <field name="selling_price"/>
                    </group>
                </group>
                <notebook>
                    <page string="Description" name="description_page">
                        <div class="o_page_description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="total_area" invisible="not total_area"/>
                            </group>
                        </div>
                    </page>
                    <page string="Offers" name="offers_page">
                        <field name="offer_ids">
                            <list string="Offers">
                                <field name="price"/>
                                <field name="partner_id"/>
                                <field name="validity"/>
                                <field name="date_deadline"/>
                                <field name="status"/>
                                <button name="action_accept" 
                                        type="object" 
                                        icon="fa-check" 
                                        string="Accept" 
                                        attrs="{'invisible': [('status', '!=', 'pending')]}"/>
                                <button name="action_refuse" 
                                        type="object" 
                                        icon="fa-times" 
                                        string="Refuse" 
                                        attrs="{'invisible': [('status', '!=', 'pending')]}"/>
                            </list>
                        </field>
                    </page>
                    <page string="Other Info" name="other_info_page">
                        <group>
                            <field name="seller_id"/>
                            <field name="buyer_id"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

    <!-- Search View -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades" string="Facades"/>
                
                <separator/>
                <filter string="Available" 
                        name="available" 
                        domain="['|', 
                                ('state', '=', 'new'),
                                ('state', '=', 'offer_received')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Postcode" 
                            name="groupby_postcode" 
                            context="{'group_by': 'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" disable_column_drag="1" disable_drag="1" class="o_estate_kanban">
                <field name="state"/>
                <field name="expected_price"/>
                <field name="best_offer"/>
                <field name="selling_price"/>
                <field name="tag_ids"/>
                <field name="property_type_id"/>
                <field name="living_area"/>
                <field name="bedrooms"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="o_kanban_record_has_image_fill oe_kanban_global_click o_estate_status_{{record.state.raw_value}}">
                            <!-- Title -->
                            <div class="o_kanban_title text-ellipsis">
                                <field name="name"/>
                            </div>
                            <!-- Info row: icons and numbers -->
                            <div class="o_kanban_info_row">
                                <span class="badge bg-secondary me-1">
                                    <i class="fa fa-bed me-1" role="img" aria-label="Bedrooms" title="Bedrooms"/>
                                    <field name="bedrooms"/>
                                </span>
                                <span class="badge bg-secondary">
                                    <i class="fa fa-ruler-combined me-1" role="img" aria-label="Living Area" title="Living Area"/>
                                    <field name="living_area"/> mÂ²
                                </span>
                            </div>
                            <!-- Price and status row -->
                            <div class="o_kanban_price_status_row">
                                <span>
                                    <span>Expected: </span>
                                    <span class="fw-bold">
                                        <field name="expected_price" widget="monetary"/>
                                    </span>
                                </span>
                                <span class="badge badge-status o_status_badge_#{record.state.raw_value}">
                                    <field name="state" widget="label_selection" options="{'classes': {
                                        'new': 'secondary', 
                                        'offer_received': 'success', 
                                        'offer_accepted': 'warning', 
                                        'sold': 'danger', 
                                        'canceled': 'dark'}}"/>
                                </span>
                            </div>
                            <!-- Best Offer -->
                            <div t-if="record.state.raw_value == 'offer_received'" class="o_kanban_offer_row">
                                <span>Best offer: </span>
                                <span class="fw-bold">
                                    <field name="best_offer" widget="monetary"/>
                                </span>
                            </div>
                            <!-- Selling Price -->
                            <div t-if="record.state.raw_value == 'offer_accepted'" class="o_kanban_selling_row">
                                <span>Selling price: </span>
                                <span class="fw-bold">
                                    <field name="selling_price" widget="monetary"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_available': True}</field>
    </record>

    <!-- Property Type Action -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
